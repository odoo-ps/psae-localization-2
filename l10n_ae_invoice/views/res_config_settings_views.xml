<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Secondary Company Report Language Form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='invoicing_settings']" position="inside">
                    <div class="col-xs-12 col-md-6 o_setting_box" id="dual_invoice_language_setting">
                        <div class="o_setting_left_pane">
                            <field name="dual_invoice_language"/>
                        </div>
                        <div class="o_setting_right_pane" id="secondary_language_code">
                            <span class="o_form_label">Arabic/English Invoice</span>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>