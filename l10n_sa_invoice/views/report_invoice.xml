<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice" inherit_id="account.report_invoice">
        <xpath expr='//t[@t-call="account.report_invoice_document"]' position="after">
            <t t-if="o._get_name_invoice_report() == 'l10n_sa_invoice.ar_invoice'"
               t-call="l10n_sa_invoice.ar_invoice" t-lang="lang"/>
        </xpath>
    </template>

    <template id="report_invoice_with_payments" inherit_id="account.report_invoice_with_payments">
        <xpath expr='//t[@t-call="account.report_invoice_document"]' position="after">
            <t t-if="o._get_name_invoice_report() == 'l10n_sa_invoice.ar_invoice'"
               t-call="l10n_sa_invoice.ar_invoice" t-lang="lang"/>
        </xpath>
    </template>

    <template id="ar_invoice">
        <t t-call="l10n_sa_invoice.external_layout_standard">
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>

            <t t-set="primary_lang" t-value="o.company_id.primary_language_code"/>
            <t t-set="secondary_lang" t-value="o.company_id.secondary_language_code"/>
            <t t-set="o_sec" t-value="o.with_context(lang=secondary_lang.code)"/>
            <t t-set="o" t-value="o.with_context(lang=primary_lang.code)"/>
            <t t-set="primary_text" t-value="o.company_id.invoice_text.with_context(lang=primary_lang.code)"/>
            <t t-set="secondary_text" t-value="o_sec.company_id.invoice_text.with_context(lang=secondary_lang.code)"/>
            <t t-set="primary_dir" t-value="primary_lang.direction"/>
            <t t-set="secondary_dir" t-value="secondary_lang.direction"/>
            <t t-set="infocol" t-value="('col-md-2' if report_type == 'html' else 'col-2')"/>
            <t t-set="colclass" t-value="('col-md-6' if report_type == 'html' else 'col-6')"/>
            <t t-set="address">
                <address t-field="o.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name", "vat"], "no_marker": True}'/>
                <!--                <div t-if="o.partner_id.vat" class="mt16">-->
                <!--                    <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"-->
                <!--                       id="inv_tax_id_label"/>-->
                <!--                    <t t-else="">-->
                <!--                        <t t-esc="primary_text.tax_id"/>-->
                <!--                    </t>-->
                <!--                    :-->
                <!--                    <span t-field="o.partner_id.vat"/>-->
                <!--                </div>-->
            </t>
<!--            <t t-set="sec_address">-->
<!--                <address t-field="o_sec.partner_id"-->
<!--                         t-options='{"widget": "contact", "fields": ["address", "name", "vat"], "no_marker": True}'/>-->
<!--                &lt;!&ndash;                <div t-if="o_sec.partner_id.vat" class="mt16">&ndash;&gt;-->
<!--                &lt;!&ndash;                    <t t-if="o_sec.company_id.country_id.vat_label" t-esc="o_sec.company_id.country_id.vat_label"&ndash;&gt;-->
<!--                &lt;!&ndash;                       id="inv_tax_id_label"/>&ndash;&gt;-->
<!--                &lt;!&ndash;                    <t t-else="">&ndash;&gt;-->
<!--                &lt;!&ndash;                        <t t-esc="secondary_text.tax_id"/>&ndash;&gt;-->
<!--                &lt;!&ndash;                    </t>&ndash;&gt;-->
<!--                &lt;!&ndash;                    :&ndash;&gt;-->
<!--                &lt;!&ndash;                    <span t-field="o_sec.partner_id.vat"/>&ndash;&gt;-->
<!--                &lt;!&ndash;                </div>&ndash;&gt;-->
<!--            </t>-->
            <page>
                <h3>
                    <div class="row">
                        <div class="col-4" style="text-align:left">
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                <t t-esc="primary_text.posted"/>
                            </span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                                <t t-esc="primary_text.draft"/>
                            </span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                <t t-esc="primary_text.cancel"/>
                            </span>
                            <span t-if="o.move_type == 'out_refund'">
                                <t t-esc="primary_text.out_refund"/>
                            </span>
                            <span t-if="o.move_type == 'in_refund'">
                                <t t-esc="primary_text.in_refund"/>
                            </span>
                            <span t-if="o.move_type == 'in_invoice'">
                                <t t-esc="primary_text.in_invoice"/>
                            </span>
                        </div>
                        <div class="col-4">
                            <span t-if="o.name != '/'" t-field="o.name"/>
                        </div>
                        <div class="col-4" style="text-align:right">
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">
                                <t t-esc="secondary_text.posted"/>
                            </span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">
                                <t t-esc="secondary_text.draft"/>
                            </span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">
                                <t t-esc="secondary_text.cancel"/>
                            </span>
                            <span t-if="o.move_type == 'out_refund'">
                                <t t-esc="secondary_text.out_refund"/>
                            </span>
                            <span t-if="o.move_type == 'in_refund'">
                                <t t-esc="secondary_text.in_refund"/>
                            </span>
                            <span t-if="o.move_type == 'in_invoice'">
                                <t t-esc="secondary_text.in_invoice"/>
                            </span>
                        </div>
                    </div>
                </h3>

                <div id="informations" class="pb-3">
                    <div class="row" t-if="o.invoice_date" name="invoice_date">
                        <div t-att-class="infocol">
                            <strong style="white-space:nowrap"><t t-esc="primary_text.invoice_date"/>:
                            </strong>
                        </div>
                        <div t-att-class="infocol">
                            <span t-field="o.invoice_date"/>
                        </div>
                        <div t-att-class="infocol +' text-right'">
                            <strong style="white-space:nowrap">:
                                <t t-esc="secondary_text.invoice_date"/>
                            </strong>
                        </div>
                    </div>
                    <div class="row"
                         t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'"
                         name="due_date">
                        <div t-att-class="infocol">
                            <strong style="white-space:nowrap"><t t-esc="primary_text.due_date"/>:
                            </strong>
                        </div>
                        <div t-att-class="infocol">
                            <span t-field="o.invoice_date_due"/>
                        </div>
                        <div t-att-class="infocol+' text-right'">
                            <strong style="white-space:nowrap">:
                                <t t-esc="secondary_text.due_date"/>
                            </strong>
                        </div>
                    </div>
                    <div class="row" t-if="o.delivery_date" name="delivery_date">
                        <div t-att-class="infocol">
                            <strong style="white-space:nowrap"><t t-esc="primary_text.delivery_date"/>:
                            </strong>
                        </div>
                        <div t-att-class="infocol">
                            <span t-field="o.delivery_date"/>
                        </div>
                        <div t-att-class="infocol +' text-right'">
                            <strong style="white-space:nowrap">:
                                <t t-esc="secondary_text.delivery_date"/>
                            </strong>
                        </div>
                    </div>
                    <div class="row" t-if="o.invoice_origin" name="origin">
                        <div t-att-class="infocol">
                            <strong style="white-space:nowrap"><t t-esc="primary_text.source"/>:
                            </strong>
                        </div>
                        <div t-att-class="infocol">
                            <span t-field="o.invoice_origin"/>
                        </div>
                        <div t-att-class="infocol+' text-right'">
                            <strong style="white-space:nowrap">:
                                <t t-esc="secondary_text.source"/>
                            </strong>
                        </div>
                    </div>
                    <div class="row" t-if="o.partner_id.ref" name="customer_code">
                        <div t-att-class="infocol">
                            <strong style="white-space:nowrap">:
                                <t t-esc="primary_text.customer_code"/>
                            </strong>
                        </div>
                        <div t-att-class="infocol">
                            <span t-field="o.partner_id.ref"/>
                        </div>
                        <div t-att-class="infocol+' text-right'">
                            <strong style="white-space:nowrap">:
                                <t t-esc="secondary_text.customer_code"/>
                            </strong>
                        </div>
                    </div>
                    <div class="col-auto mw-100 mb-2" t-if="o.ref" name="reference">
                        <div t-att-class="infocol">
                            <strong style="white-space:nowrap"><t t-esc="primary_text.reference"/>:
                            </strong>
                        </div>
                        <div t-att-class="infocol">
                            <span t-field="o.ref"/>
                        </div>
                        <div t-att-class="infocol+' text-right'">
                            <strong style="white-space:nowrap">:
                                <t t-esc="secondary_text.reference"/>
                            </strong>
                        </div>
                    </div>
                </div>

                <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                <table class="table table-sm o_main_table" name="invoice_line_table">
                    <thead>
                        <tr>
                            <t t-set="colspan" t-value="6"/>
                            <th name="th_description" class="text-left">
                                <span>
                                    <t t-esc="primary_text.description"/>
                                </span>
                                <br/>
                                <span>
                                    <t t-esc="secondary_text.description"/>
                                </span>
                            </th>
                            <th name="th_source" class="d-none text-left" t-if="0">
                                <span>
                                    <t t-esc="primary_text.source_document"/>
                                </span>
                                <br/>
                                <span>
                                    <t t-esc="secondary_text.source_document"/>
                                </span>
                            </th>
                            <th name="th_quantity" class="text-right">
                                <span>
                                    <t t-esc="primary_text.quantity"/>
                                </span>
                                <br/>
                                <span>
                                    <t t-esc="secondary_text.quantity"/>
                                </span>
                            </th>
                            <th name="th_priceunit"
                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>
                                    <t t-esc="primary_text.unit_price"/>
                                </span>
                                <br/>
                                <span>
                                    <t t-esc="secondary_text.unit_price"/>
                                </span>
                            </th>
                            <th name="th_price_unit" t-if="display_discount"
                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>
                                    <t t-esc="primary_text.discount_percent"/>
                                </span>
                                <br/>
                                <span>
                                    <t t-esc="secondary_text.discount_percent"/>
                                </span>
                                <t t-set="colspan" t-value="colspan+1"/>
                            </th>
                            <th name="th_taxes"
                                t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>
                                    <t t-esc="primary_text.taxes"/>
                                </span>
                                <br/>
                                <span>
                                    <t t-esc="secondary_text.taxes"/>
                                </span>
                            </th>
                            <th name="th_subtotal" class="text-right">
                                <span>
                                    <t t-esc="primary_text.amount"/>
                                </span>
                                <br/>
                                <span>
                                    <t t-esc="secondary_text.amount"/>
                                </span>
                            </th>
                            <th name="th_tax_amount"
                                t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                <span>
                                    <t t-esc="primary_text.tax_amount"/>
                                </span>
                                <br/>
                                <span>
                                    <t t-esc="secondary_text.tax_amount"/>
                                </span>
                            </th>
                            <th name="th_total" class="text-right">
                                <span>
                                    <t t-esc="primary_text.total_price"/>
                                </span>
                                <br/>
                                <span>
                                    <t t-esc="secondary_text.total_price"/>
                                </span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines"
                           t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                        <t t-set="sec_lines"
                           t-value="o_sec.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>


                        <t t-foreach="len(lines)" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + lines[line].price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + lines[line].price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if lines[line].display_type == 'line_section' else 'font-italic o_line_note' if lines[line].display_type == 'line_note' else ''">
                                <t t-if="not lines[line].display_type" name="account_invoice_line_accountable">
                                    <td name="account_invoice_line_name">
                                        <span t-field="lines[line].product_id.name" t-options="{'widget': 'text'}"/>
                                        <t t-if="lines[line].product_id.name != sec_lines[line].product_id.name">
                                            <br/>
                                            <span t-field="sec_lines[line].product_id.name"
                                                  t-options="{'widget': 'text'}"/>
                                        </t>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="lines[line].quantity"/>
                                        <span t-field="lines[line].product_uom_id" groups="uom.group_uom"/>
                                    </td>
                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap" t-field="lines[line].price_unit"/>
                                    </td>
                                    <td t-if="display_discount"
                                        t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap" t-field="lines[line].discount"/>
                                    </td>
                                    <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-esc="', '.join(map(lambda x: (x.description or x.name), lines[line].tax_ids))"
                                              id="line_tax_ids"/>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="lines[line].price_subtotal"/>
                                    </td>
                                    <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span class="text-nowrap" t-field="lines[line].tax_amount"/>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="lines[line].price_total"/>
                                    </td>
                                </t>
                                <t t-if="lines[line].display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="lines[line].name" t-options="{'widget': 'text'}"/>
                                    </td>
                                    <t t-set="current_section" t-value="lines[line]"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="lines[line].display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="lines[line].name" t-options="{'widget': 'text'}"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or lines[line+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div class="clearfix pt-4 pb-3">
                    <div id="total" class="row">
                        <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-6 col-md-6'}">
                            <table class="table table-sm" style="page-break-inside: avoid;">
                                <t t-if="o.amount_total_words_primary">
                                    <tr class="border-black o_total">
                                        <td t-attf-class="#{'text-right' if primary_dir == 'rtl' else 'text-left'}">
                                            <strong>
                                                <t t-esc="primary_text.amount_due_in_words"/>
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-class="#{'text-right' if primary_dir == 'rtl' else 'text-left'}">
                                            <span t-esc="o.currency_id.with_context(lang='en_US').amount_to_text(o.amount_total)"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="o.amount_total_words_secondary">
                                    <tr class="border-black o_total">
                                        <td t-attf-class="#{'text-right' if secondary_dir == 'rtl' else 'text-left'}">
                                            <strong>
                                                <t t-esc="secondary_text.amount_due_in_words"/>
                                            </strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td t-attf-class="#{'text-right' if secondary_dir == 'rtl' else 'text-left'}">
                                            <span t-esc="o.currency_id.with_context(lang='ar_001').amount_to_text(o.amount_total)"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </div>

                        <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-6 col-md-6'}">
                            <table class="table table-sm" style="page-break-inside: avoid;">
                                <tr class="border-black o_subtotal" style="">
                                    <td>
                                        <strong>
                                            <t t-esc="primary_text.subtotal"/>
                                            /
                                            <t t-esc="secondary_text.subtotal"/>
                                        </strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"/>
                                    </td>
                                </tr>

                                <t t-foreach="range(len(o.amount_by_group))" t-as="i">
                                    <tr style="">
                                        <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == o.amount_by_group[i][2]">
                                            <td>
                                                <span class="text-nowrap" t-esc="'Total VAT'"/>
                                                /
                                                <span class="text-nowrap" t-esc="'مجموع ضريبة القيمة المضافة'"/>
                                            </td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="o_sec.amount_by_group[i][3]"/>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td>
                                                <span t-esc="o_sec.amount_by_group[i][0]"/>
                                                <span class="text-nowrap">on
                                                    <t t-esc="o_sec.amount_by_group[i][4]"/>
                                                </span>
                                            </td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="o_sec.amount_by_group[i][3]"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr class="border-black o_total">
                                    <td>
                                        <strong>
                                            <t t-esc="primary_text.total"/>
                                            /
                                            <t
                                                    t-esc="secondary_text.total"/>
                                        </strong>
                                    </td>
                                    <td class="text-right">
                                        <span class="text-nowrap" t-field="o.amount_total"/>
                                    </td>
                                </tr>

                                <t t-if="print_with_payments">
                                    <t t-if="o.payment_state != 'invoicing_legacy'">
                                        <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                        <t t-foreach="payments_vals" t-as="payment_vals">
                                            <tr class="border-black o_total">
                                                <td>
                                                    <i class="oe_form_field text-right oe_payment_label">
                                                        <t t-esc="primary_text.paid_on"/>:
                                                        <t t-esc="payment_vals['date']"/>
                                                        :
                                                        <t t-esc="secondary_text.paid_on"/>
                                                    </i>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="payment_vals['amount']"
                                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                            </tr>
                                        </t>
                                        <t t-if="len(payments_vals) > 0">
                                            <tr class="border-black">
                                                <td>
                                                    <strong>
                                                        <t t-esc="primary_text.amount_due"/>
                                                        /
                                                        <t
                                                                t-esc="secondary_text.amount_due"/>
                                                    </strong>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="o.amount_residual"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </t>
                            </table>
                        </div>
                    </div>
                </div>

                <p t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference"
                   name="payment_communication">
                    <div class="row">
                        <div t-attf-dir="#{primary_dir}"
                             t-attf-class="#{'text-right '+colclass if primary_dir == 'rtl' else 'text-left '+colclass}">
                            <t t-esc="primary_text.payment_reference"/>
                            :
                            <b>
                                <span
                                        t-field="o.payment_reference"/>
                            </b>
                        </div>
                        <div t-attf-dir="#{secondary_dir}"
                             t-attf-class="#{'text-right '+colclass if secondary_dir == 'rtl' else 'text-left '+colclass}">
                            <p><t t-esc="secondary_text.payment_reference"/>:
                                <b>
                                    <span t-field="o.payment_reference"/>
                                </b>
                            </p>
                        </div>
                    </div>
                </p>


                <p t-if="o.invoice_payment_term_id" name="payment_term">
                    <div class="row">
                        <div t-attf-dir="#{primary_dir}"
                             t-attf-class="#{'text-right '+colclass if primary_dir == 'rtl' else 'text-left '+colclass}">
                            <span t-field="o.invoice_payment_term_id.note"/>
                        </div>
                        <div t-attf-dir="#{secondary_dir}"
                             t-attf-class="#{'text-right '+colclass if secondary_dir == 'rtl' else 'text-left '+colclass}">
                            <span dir="rtl" t-field="o_sec.invoice_payment_term_id.note"/>
                        </div>

                    </div>
                </p>
                <p t-if="o.narration" name="comment">
                    <div class="row">
                        <div t-attf-dir="#{primary_dir}"
                             t-attf-class="#{'text-right '+colclass if primary_dir == 'rtl' else 'text-left '+colclass}">
                            <span t-field="o.narration"/>
                        </div>
                        <div t-attf-dir="#{secondary_dir}"
                             t-attf-class="#{'text-right '+colclass if secondary_dir == 'rtl' else 'text-left '+colclass}">
                            <span t-field="o_sec.narration"/>
                        </div>
                    </div>
                </p>
                <p t-if="o.fiscal_position_id.note" name="note">
                    <div class="row">
                        <div t-attf-dir="#{primary_dir}"
                             t-attf-class="#{'text-right '+colclass if primary_dir == 'rtl' else 'text-left '+colclass}">
                            <span t-field="o.fiscal_position_id.note"/>
                        </div>
                        <div t-attf-dir="#{secondary_dir}"
                             t-attf-class="#{'text-right '+colclass if secondary_dir == 'rtl' else 'text-left '+colclass}">
                            <span t-field="o_sec.fiscal_position_id.note"/>
                        </div>
                    </div>
                </p>
                <p t-if="o.invoice_incoterm_id" name="incoterm">
                    <div class="row">
                        <div t-attf-dir="#{primary_dir}"
                             t-attf-class="#{'text-right '+colclass if primary_dir == 'rtl' else 'text-left '+colclass}">
                            <strong><t t-esc="primary_text.incoterm"/>:
                            </strong>
                            <span
                                    t-field="o.invoice_incoterm_id.code"/>
                            -
                            <span
                                    t-field="o.invoice_incoterm_id.name"/>
                        </div>
                        <div t-attf-dir="#{secondary_dir}"
                             t-attf-class="#{'text-right '+colclass if secondary_dir == 'rtl' else 'text-left '+colclass}">
                            <strong><t t-esc="secondary_text.incoterm"/>:
                            </strong>
                            <span
                                    t-field="o_sec.invoice_incoterm_id.code"/>
                            -
                            <span
                                    t-field="o_sec.invoice_incoterm_id.name"/>
                        </div>
                    </div>
                </p>

            </page>
        </t>
    </template>

    <template id="external_layout_standard">
        <t t-set="company" t-value="company.with_context(lang=primary_lang.code)"/>
        <t t-set="company_ar" t-value="company.with_context(lang=secondary_lang.code)"/>
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            <div class="row">
                <div class="col-3 mb4">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;"
                         alt="Logo"/>
                </div>
                <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            </div>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
            <div class="row">
                <div class="col-4" name="company_address">
                    <div t-field="company.partner_id"
                         t-options='{"widget": "contact", "fields": ["address", "name", "vat"], "no_marker": true}'
                    />
                </div>
                <div class="col-4">
                    <img t-if="o.qr_code_str"
                         style="display:block;margin:10% auto 0 auto;"
                         t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', o.qr_code_str, 150, 150)"/>
                </div>
                <!--                <div class="col-4">-->
                <!--                    <img t-if="not no_qr"-->
                <!--                         t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'%('QR', '%s/qr-report/download?token=%s%sdata=%s%scontext=%s' %(o.env['ir.config_parameter'].sudo().get_param('web.base.url'), 'dummy-because-api-expects-one', '%26', '[&quot;%s%d&quot;,&quot;%s&quot;]' %('/report/pdf/account.report_invoice_with_payments/', o.id, 'qweb-pdf'), '%26', json.dumps(o.env.context)) , 200, 200)"/>-->
                <!--                </div>-->
                <div class="col-4" name="company_address" dir="rtl" style="text-align:right">

<!--                    <div t-field="company_ar.partner_id"-->
<!--                         t-options='{"widget": "contact", "fields": ["address", "name", "vat"], "no_marker": true}'-->
<!--                    />-->
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-5">
                <t t-call="l10n_sa_invoice.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">
                <ul class="list-inline mb4">

                    <li t-if="company.phone" class="list-inline-item d-inline">
                        <span class="o_force_ltr"
                              t-field="company.phone"/>
                    </li>
                    <li t-if="company.email" class="list-inline-item d-inline">
                        <span t-field="company.email"/>
                    </li>
                    <li t-if="company.website" class="list-inline-item d-inline">
                        <span t-field="company.website"/>
                    </li>
                    <li t-if="company.vat" class="list-inline-item d-inline"><t
                            t-esc="company.country_id.vat_label or 'Tax ID'"/>:
                        <span t-field="company.vat"/>
                    </li>
                </ul>

                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page:
                    <span class="page"/>
                    /
                    <span class="topage"/>
                </div>
            </div>
        </div>
    </template>

    <template id="address_layout">
        <t t-if="address">
            <div class="address row">
                <t t-if="information_block">
                    <t t-set="colclass" t-value="'col-6'"/>
                    <div name="information_block" class="col-6">
                        <t t-raw="information_block"/>
                    </div>
                </t>
                <div name="address" t-att-class="colclass">
                    <t t-raw="address"/>
                </div>
                <div name="address" t-att-class="colclass" style="text-align:right" dir="rtl">
                    <t t-raw="sec_address"/>
                </div>
            </div>
            <br/>
        </t>
    </template>

</odoo>
